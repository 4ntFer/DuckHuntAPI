<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="DuckHuntAPI.Models" assembly="DuckHuntAPI">

    <class name="Character" table="Character">

        <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
        <id name="Id">
            <column name="id" sql-type="int" not-null="false"/>
            <generator class="uuid.hex" />
        </id>

        <!-- A cat has to have a name, but it shouldn't be too long. -->
        <property name="name">
            <column name="Name" length="255" not-null="false" />
        </property>
    </class>

</hibernate-mapping>